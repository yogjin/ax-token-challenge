---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

const prompts = (await getCollection('prompts')).sort((a, b) =>
  b.data.date.localeCompare(a.data.date)
);

const rendered = await Promise.all(
  prompts.map(async (p) => ({ ...p, content: await render(p) }))
);
---

<Base title="Prompts">
  <div class="page-header animate-in">
    <h1>프롬프트</h1>
    <p class="page-desc">실제로 사용한 프롬프트들입니다. 복사해서 직접 써보세요.</p>
  </div>

  {rendered.map((prompt, i) => (
    <section class={`prompt-section animate-in stagger-${i + 1}`}>
      <div class="prompt-header">
        <h2>{prompt.data.title}</h2>
        <div class="prompt-meta">
          <span class="prompt-tag">{prompt.data.category}</span>
          <span class="prompt-date">{prompt.data.date}</span>
        </div>
        <p class="prompt-desc">{prompt.data.description}</p>
      </div>
      <div class="prompt-block">
        <button class="copy-btn">Copy</button>
        <prompt.content.Content />
      </div>
    </section>
  ))}
</Base>

<style>
  .page-header {
    margin-bottom: 2.5rem;
  }

  .page-desc {
    color: var(--muted);
    font-size: 1rem;
  }

  .prompt-section {
    margin-bottom: 3rem;
  }

  .prompt-header {
    margin-bottom: 0.8rem;
  }

  .prompt-header h2 {
    margin: 0 0 0.5rem;
  }

  .prompt-meta {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 0.5rem;
  }

  .prompt-tag {
    display: inline-block;
    background: var(--accent-light);
    color: var(--accent);
    font-size: 0.78rem;
    font-weight: 600;
    padding: 0.2rem 0.65rem;
    border-radius: 100px;
  }

  .prompt-date {
    font-size: 0.82rem;
    color: var(--muted);
    font-variant-numeric: tabular-nums;
  }

  .prompt-desc {
    color: var(--fg-secondary);
    font-size: 0.95rem;
  }
</style>
